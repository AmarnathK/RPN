<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="CalculatorDisplay" parent="@android:style/TextAppearance.Large">
		<item name="android:background">#a5af91</item>
		<item name="android:textColor">#000</item>
		<item name="android:padding">3dp</item>
	</style>
	<style name="LandscapeCalculatorDisplay" parent="@android:style/TextAppearance.Small">
		<item name="android:background">#a5af91</item>
		<item name="android:textColor">#000</item>
		<item name="android:padding">3dp</item>
	</style>
	
	<style name="CalculatorButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:textSize">30sp</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">96dp</item>
		<item name="android:layout_height">150dp</item>
	</style>
	<style name="LandscapeCalculatorButtonStyle" parent="@android:style/Widget.Button.Small">
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:textSize">20sp</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">80dp</item>
	</style>
	
	<style name="EnterButtonStyle" parent="CalculatorButtonStyle">
		<item name="android:textSize">15sp</item>
	 	<item name="android:layout_width">96dp</item>
		<item name="android:layout_height">300dp</item>
	</style>
	<style name="LandscapeEnterButtonStyle" parent="LandscapeCalculatorButtonStyle">
		<item name="android:textSize">15sp</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">160dp</item>
	</style>

	<style name="CalculatorTextButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:textSize">14sp</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">96dp</item>
		<item name="android:layout_height">150dp</item>
	</style>
	<style name="LandscapeCalculatorTextButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:textSize">14sp</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">80dp</item>
	</style>

	
	<style name="ShiftButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:textSize">20sp</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">96dp</item>
		<item name="android:layout_height">150dp</item>
	</style>
	<style name="LandscapeShiftButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:hapticFeedbackEnabled">true</item>
		<item name="android:textSize">13sp</item>
		<item name="android:focusable">true</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">80dp</item>
	</style>
	
	<style name="MissingButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:hapticFeedbackEnabled">false</item>
		<item name="android:background">#00000000</item>
		<item name="android:focusable">false</item>
		<item name="android:layout_width">96dp</item>
		<item name="android:layout_height">150dp</item>
	</style>
	<style name="LandscapeMissingButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:hapticFeedbackEnabled">false</item>
		<item name="android:background">#00000000</item>
		<item name="android:focusable">false</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:layout_height">80dp</item>
	</style>

</resources>
